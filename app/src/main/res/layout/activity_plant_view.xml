<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="comp3350.plantr.presentation.PlantView">

    <ImageView
        android:id="@+id/plantImageView"
        android:layout_width="454dp"
        android:layout_height="250dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plantViewTitle"
        app:srcCompat="@android:color/background_light"
        />

    <TextView
        android:id="@+id/plantViewTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/plantViewDescription"
        android:layout_width="454dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Description Text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plantImageView"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/plantViewDifficulty"
        android:layout_width="454dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Difficulty Text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plantViewDescription"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/plantview_optimalTemperatures"
        android:layout_width="454dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Optimal Temps Text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plantViewDifficulty"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/plantview_wateringFrequency"
        android:layout_width="454dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Watering Frequency Text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plantview_optimalTemperatures"
        app:layout_constraintVertical_chainStyle="packed"/>

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:background="@android:color/darker_gray"
        android:text="@string/add_to_garden"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/plantview_wateringFrequency"/>
</android.support.constraint.ConstraintLayout>
